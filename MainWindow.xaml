<Window x:Class="Pr3_005.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr3_005"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="300" Width="300">
    <Grid>
        <StackPanel>
        <TextBlock Text="Введите координату X:" Margin="5"/>
        <TextBox x:Name="xBox" Margin="5" Grid.Row="1"/>
        <TextBlock Text="Введите координату Y:" Margin="5" Grid.Row="2"/>
        <TextBox x:Name="yBox" Margin="5" Grid.Row="3"/>
        <Button Content="OK" Margin="5" Grid.Row="4" Click="Button_Click"/>
        <TextBlock x:Name="txtOtv" Margin="5" Grid.Row="4"/>
        </StackPanel>
    </Grid>
</Window>
